{#
This overrides the default CMS content page. It renders a custom landing layout
for the homepage when no Shopping Experience is assigned.
#}
{% sw_extends '@Storefront/storefront/page/content/index.html.twig' %}

{% block base_content %}
    {% if app.request.attributes.get('_route') == 'frontend.home.page' %}
        <div class="sk-home">
            <section class="sk-home-slider" data-skylad-slider data-skylad-slider-interval="7000" data-skylad-slider-a11y="{{ 'skylad.home.slider.aria'|trans }}">
                <div class="sk-home-slider__inner">
                    <article class="sk-home-slider__slide is-active" data-skylad-slide style="--sk-slide-bg: url('{{ asset('bundles/skyladtheme/assets/slider-hero-01.svg') }}');">
                        <div class="sk-home-slider__overlay"></div>
                        <div class="container sk-home-slider__container">
                            <div class="sk-home-slider__text">
                                <span class="sk-home-slider__tag">{{ 'skylad.home.slider.slide1.tag'|trans }}</span>
                                <h2>{{ 'skylad.home.slider.slide1.title'|trans }}</h2>
                                <p>{{ 'skylad.home.slider.slide1.text'|trans }}</p>
                            </div>
                        </div>
                    </article>
                    <article class="sk-home-slider__slide" data-skylad-slide style="--sk-slide-bg: url('{{ asset('bundles/skyladtheme/assets/slider-hero-02.svg') }}');">
                        <div class="sk-home-slider__overlay"></div>
                        <div class="container sk-home-slider__container">
                            <div class="sk-home-slider__text">
                                <span class="sk-home-slider__tag">{{ 'skylad.home.slider.slide2.tag'|trans }}</span>
                                <h2>{{ 'skylad.home.slider.slide2.title'|trans }}</h2>
                                <p>{{ 'skylad.home.slider.slide2.text'|trans }}</p>
                            </div>
                        </div>
                    </article>
                    <article class="sk-home-slider__slide" data-skylad-slide style="--sk-slide-bg: url('{{ asset('bundles/skyladtheme/assets/slider-hero-03.svg') }}');">
                        <div class="sk-home-slider__overlay"></div>
                        <div class="container sk-home-slider__container">
                            <div class="sk-home-slider__text">
                                <span class="sk-home-slider__tag">{{ 'skylad.home.slider.slide3.tag'|trans }}</span>
                                <h2>{{ 'skylad.home.slider.slide3.title'|trans }}</h2>
                                <p>{{ 'skylad.home.slider.slide3.text'|trans }}</p>
                            </div>
                        </div>
                    </article>
                </div>
                <div class="sk-home-slider__dots" data-skylad-slider-dots></div>
            </section>

            <section class="sk-home-header">
                <div class="container">
                    <div class="sk-home-header__inner">
                        <div class="sk-home-header__texts">
                            <span class="sk-home-header__eyebrow">{{ 'skylad.home.header.eyebrow'|trans }}</span>
                            <h1>{{ 'skylad.home.header.title'|trans }}</h1>
                            <p>{{ 'skylad.home.header.text'|trans }}</p>
                        </div>
                        <div class="sk-home-header__cta">
                            <a class="sk-home-header__whatsapp" href="{{ 'skylad.home.header.whatsAppLink'|trans }}" target="_blank" rel="noopener">
                                <img src="{{ asset('bundles/skyladtheme/assets/icon-whatsapp.svg') }}" alt="{{ 'skylad.home.header.whatsAppLabel'|trans }}">
                                <span>{{ 'skylad.home.header.whatsAppLabel'|trans }}</span>
                            </a>
                        </div>
                    </div>
                </div>
            </section>

            <section class="sk-home-intro">
                <div class="container">
                    <div class="sk-home-intro__content">
                        <h2>{{ 'skylad.home.intro.title'|trans }}</h2>
                        <p>{{ 'skylad.home.intro.text1'|trans }}</p>
                        <p>{{ 'skylad.home.intro.text2'|trans }}</p>
                        <ul class="sk-home-intro__list">
                            <li>{{ 'skylad.home.intro.list1'|trans }}</li>
                            <li>{{ 'skylad.home.intro.list2'|trans }}</li>
                            <li>{{ 'skylad.home.intro.list3'|trans }}</li>
                        </ul>
                        <p>{{ 'skylad.home.intro.text3'|trans }}</p>
                    </div>
                </div>
            </section>

            <section class="sk-home-counter">
                <div class="container">
                    <div class="sk-home-counter__grid">
                        <article class="sk-home-counter__item">
                            <span class="sk-home-counter__value">771</span>
                            <span class="sk-home-counter__label">{{ 'skylad.home.counter.smartphone'|trans }}</span>
                        </article>
                        <article class="sk-home-counter__item">
                            <span class="sk-home-counter__value">1120</span>
                            <span class="sk-home-counter__label">{{ 'skylad.home.counter.coffee'|trans }}</span>
                        </article>
                        <article class="sk-home-counter__item">
                            <span class="sk-home-counter__value">355</span>
                            <span class="sk-home-counter__label">{{ 'skylad.home.counter.tablet'|trans }}</span>
                        </article>
                    </div>
                </div>
            </section>
        </div>
    {% else %}
        {{ parent() }}
    {% endif %}
{% endblock %}
